{
  "mcpServers": {
    "shioaji": {
      "command": "docker",
      "args": [
        "run", "--rm", "-i", "--platform=linux/amd64",
        "-e", "SHIOAJI_API_KEY=your_api_key_here",
        "-e", "SHIOAJI_SECRET_KEY=your_secret_key_here",
        "-e", "SHIOAJI_TRADING_ENABLED=true",
        "ghcr.io/musingfox/shioaji-mcp:latest"
      ]
    }
  }
}